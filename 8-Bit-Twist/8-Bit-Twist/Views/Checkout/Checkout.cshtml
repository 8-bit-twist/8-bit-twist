@model Order
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@foreach (OrderItem item in Model.OrderItems)
{
    <section id="@item.ProductID" class="product">
        <h4>@item.Product.Name</h4>
        <h5>$@item.Product.Price</h5>
    </section>
}

<h4>Order Total: $@Model.TotalPrice</h4>

<section>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="ShippingAddress"></label>
        <input asp-for="ShippingAddress" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
        <label asp-for="City"></label>
        <input asp-for="City" />
        <span asp-validation-for="City" class="text-danger"></span>
        <label asp-for="Zip"></label>
        <input asp-for="Zip" />
        <span asp-validation-for="Zip" class="text-danger"></span>
        <label asp-for="CardNumber"></label>
        <select asp-for="CardNumber" asp-items="@Html.GetEnumSelectList<_8_Bit_Twist.Models.CCNumbers>()"></select>
        <button type="submit"><h3>Checkout</h3></button>
    </form>
</section>

